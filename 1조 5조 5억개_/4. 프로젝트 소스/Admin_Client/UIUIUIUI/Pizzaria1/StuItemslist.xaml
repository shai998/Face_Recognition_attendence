<UserControl x:Class="Pizzaria1.UserControlEscolha"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizzaria1"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="360" Width="715">
    <UserControl.Resources>
        <Image x:Key="Yes" Source="Resources/Yes.png" Height="25" Width="25" />
        <Image x:Key="Late" Source="Resources/Late.png" Height="25" Width="25" />
        <Image x:Key="Nope" Source="Resources/Nope.png" Height="25" Width="25" />
    </UserControl.Resources>
    <Grid>
        <materialDesign:TransitioningContent x:Name="TrainsitionigContentSlide" OpeningEffect="{materialDesign:TransitionEffect SlideInFromLeft, Duration=0:0:0.8}">
            <Grid Background="#FFF3F3F3" Margin="10">

                <ScrollViewer >

                    <ItemsControl x:Name="Itemslist">

                    </ItemsControl>

                </ScrollViewer>

            </Grid>

        </materialDesign:TransitioningContent>
    </Grid>
</UserControl>
